---
import "@styles/default.css"
import Header from "@components/Header.astro"
const { title=":)" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <slot name="header"><Header /></slot>
        <main>
			<h1>{title}</h1>
			<slot />
        </main>
        <footer>
            <p>Last build at {new Date().toLocaleString("en-US", { timeZone: "America/New_York"})} EST</p>
        </footer>
    </body>
</html>